# Paperless-ngx Configuration
# Copy this file to .env and update with your values

# Database Password - Change this to a secure password
POSTGRES_PASSWORD=changeme_secure_password

# Paperless Secret Key - Generate with: openssl rand -base64 32
PAPERLESS_SECRET_KEY=changeme_secret_key_min_32_characters

# URL where Paperless will be accessed (include protocol)
# Example: https://paperless.yourdomain.com or http://your-vps-ip:8000
PAPERLESS_URL=http://localhost:8000

# Admin User Credentials
PAPERLESS_ADMIN_USER=admin
PAPERLESS_ADMIN_PASSWORD=changeme_admin_password
PAPERLESS_ADMIN_MAIL=admin@example.com

# Timezone (see https://en.wikipedia.org/wiki/List_of_tz_database_time_zones)
PAPERLESS_TIME_ZONE=America/New_York

# OCR Language(s) - space separated list
# Common options: eng, deu, fra, ita, spa, por
PAPERLESS_OCR_LANGUAGE=eng

# Optional: Email Configuration (for notifications)
# PAPERLESS_EMAIL_HOST=smtp.gmail.com
# PAPERLESS_EMAIL_PORT=587
# PAPERLESS_EMAIL_HOST_USER=your-email@gmail.com
# PAPERLESS_EMAIL_HOST_PASSWORD=your-app-password
# PAPERLESS_EMAIL_USE_TLS=true
# PAPERLESS_EMAIL_FROM=paperless@yourdomain.com

# Optional: Consumer Settings
# PAPERLESS_CONSUMER_RECURSIVE=true
# PAPERLESS_CONSUMER_SUBDIRS_AS_TAGS=true
